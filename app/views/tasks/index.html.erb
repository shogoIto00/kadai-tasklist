<% if logged_in? %>
    <%= link_to 'Logout', logout_path, method: :delete %></li>
  <h1>タスク一覧</h1>
    <ul>
    <% @tasks.each do |task| %>
        <li>
            <%= link_to task.id, task %>: <%= task.content %> &gt; <%= task.status %>
        </li>
    <% end %>
    </ul>
    <%= link_to '新規タスクの投稿', new_task_path %>

<% else %>
  <h1>Welcome to the Tasklists</h1>
    <!-- routes.rbにget signup to user/new の設定をしているので、signup_pathでuser作成のページに飛ぶ -->
    <%= link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-primary' %>
    <%= link_to 'Login', login_path, class: 'nav-link' %>
<% end %>



